GRANT ALL PRIVILEGES ON Courses_development.* 
TO 'user'@'localhost'
IDENTIFIED BY 'secretpassword' //creates user
SHOW GRANTS FOR 'username'@'localhost'; // shows privelegs given


CREATE DATABASE;
SHOW DATABASES; 

user login: mysql -u user -p Courses_development
password: secretpassword

rake db:schema:dump // connects to the database, shows schema of the database creates,and a schema file should be in the 'db' folder 

